{
	"name": "BlockstackSso",
	"version": "0.0.1",
	"author": ["[https://organicdesign.nz/aran Aran Dunkley]", "Florian Schmidt"],
	"url": "https://github.com/saul-avikar/mediawiki-blockstack-sso",
	"descriptionmsg": "blockstack-desc",
	"license-name": "MIT",
	"type": "auth",
	"callback": "Blockstack::onRegistration",
	"requires": {
		"MediaWiki": ">= 1.28.0"
	},
	"MessagesDirs": {
		"Blockstack": ["i18n"]
	},	
	"AutoloadClasses": {
		"Blockstack": "Blockstack.php",
		"BlockstackUser": "BlockstackUser.php",
		"BlockstackPrimaryAuthProvider": "auth/BlockstackPrimaryAuthProvider.php",
		"BlockstackAuthRequest": "auth/BlockstackAuthRequest.php",
		"BlockstackRemoveAuthRequest": "auth/BlockstackRemoveAuthRequest.php",
		"BlockstackServerAuthRequest": "auth/BlockstackServerAuthRequest.php",
		"BlockstackUserInfoAuthRequest": "auth/BlockstackUserInfoAuthRequest.php"
	},
	"AuthManagerAutoConfig": {
		"primaryauth": {
			"BlockstackPrimaryAuthProvider": {
				"class": "BlockstackPrimaryAuthProvider",
				"sort": 102
			}
		}
	},
	"ResourceModules": {
		"ext.blockstack": {
			"scripts": ["blockstack.js"]
		}
	},
	"@": "The paths will be calculated at runtime",
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": ""
	}
}
