{
	"name": "BlockstackSso",
	"version": "0.0.1, 2018-04-21",
	"author": ["[https://organicdesign.nz/aran Aran Dunkley]"],
	"url": "https://github.com/saul-avikar/mediawiki-blockstack-sso",
	"description": "Adds the ability to sign in to a MediaWiki using your descentralised Blockstack ID",
	"license-name": "GPL",
	"type": "other",
	"callback": "Blockstack::onRegistration",
	"AutoloadClasses": {
		"Blockstack": "Blockstack.php",
		"BlockstackAuthProvider": "BlockstackAuthProvider.php",
		"BlockstackAuthRequest": "BlockstackAuthRequest.php"
	},
	"Hooks": {
		"UserLoginComplete":  ["BlockstackAuthProvider::onUserLoginComplete"],
		"UserLogoutComplete": ["Blockstack::onUserLogoutComplete"]
	},
	"AuthManagerAutoConfig": {
		"preauth": {},
		"primaryauth": {
			"BlockstackSsoAuthProvider": {
				"class": "BlockstackSsoAuthProvider",
				"args": [ "foo" ],
				"sort": -1
			}
		},
		"secondaryauth": {}
	},
	"MessagesDirs": {
		"Blockstack": ["i18n"]
	},
	"ResourceModules": {
		"ext.blockstack": {
			"scripts": ["modules/blockstack.js"]
		}
	},
	"@": "Paths calculated at runtime",
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": ""
	}
}
